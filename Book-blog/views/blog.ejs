<%- include("header") %>

<section class="blog">
  <h1>Explore Books</h1>

  <!-- My Favorite Books Section -->
  <div class="blog-section">
    <h2>My Favorite Books</h2>
    <div class="book-grid">
      <div class="book-card">
        <img src="/images/gone.jpg" alt="Book Cover">
        <h3>By Gone Girl</h3>
        <p>Gillian flynn</p>
      </div>
      <div class="book-card">
        <img src="/images/then.jpg" alt="Book Cover">
        <h3>And then there were none</h3>
        <p>By Christie</p>
      </div>
      <div class="book-card">
        <img src="/images/hunger.jpg" alt="Book Cover">
        <h3>Hunger games</h3>
        <p>By Collins</p>
      </div>
      <div class="book-card">
        <img src="/images/gatsby.jpg" alt="Book Cover">
        <h3>The Great Gatsby</h3>
        <p>By scott</p>
      </div>
      <div class="book-card">
        <img src="/images/holmes.webp" alt="Book Cover">
        <h3>Sherlock Holmes</h3>
        <p>By Conan</p>
      </div>
      <div class="book-card">
        <img src="/images/hobbit.jpg" alt="Book Cover">
        <h3>The Hobbit</h3>
        <p>By J.R.R. Tolkien</p>
      </div>
      <div class="book-card">
        <img src="/images/maha.jpg" alt="Book Cover">
        <h3>Mahabharata</h3>
        <p>By Vyasa</p>
      </div>
      <div class="book-card">
        <img src="/images/1984.jpg" alt="Book Cover">
        <h3>1984</h3>
        <p>By George Orwell</p>
      </div>
      <div class="book-card">
        <img src="/images/wolf.jpg" alt="Book Cover">
        <h3>Wolf hall</h3>
        <p>By Hilary Mantel</p>
      </div>
      <div class="book-card">
        <img src="/images/iam.jpg" alt="Book Cover">
        <h3>I'am watching you</h3>
        <p>By Teresa Driscoll</p>
      </div>
    </div>
  </div>

  <!-- All Books Section -->
  <div class="blog-section">
    <h2>All Posts</h2>
    <div class="book-grid">
      <% if (typeof posts !== "undefined" && posts.length > 0) { %>
        <% posts.forEach(post => { %>
          <div class="book-card">
            <h3><%= post.title %></h3>
            <p><%= post.content %></p>
      
            <% if (typeof userId !== "undefined" && userId && post.userId && post.userId === userId) { %>
              <form action="/delete/<%= post.id %>" method="POST" 
                onsubmit="return confirm('Are you sure you want to delete this post?');">
                <button type="submit" class="delete-btn">Delete</button>
              </form>
            <% } %>
          </div>
        <% }) %>
      <% } else { %>
        <p>No posts available.</p>
      <% } %>
            
    </div>
  </div>
  
</section>

<%- include("footer") %>
